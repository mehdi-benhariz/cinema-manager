@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.3/dist/css/bootstrap.min.css" integrity="sha384-GLhlTQ8iK7l5i6T9RS6YZJ46S3dPwF/RRxK1J+9WGHbBR5d6SppQD9F1ybo5pe1I" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #343a40;
            color: #fff;
        }

        .table {
            color: #fff;
        }

            .table th, .table td {
                border: none;
                color: #fff;
            }

        .table-hover tbody tr:hover {
            background-color: #495057;
        }

        .rounded-circle {
            max-width: 150px;
        }

        .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
        }

            .btn-outline-primary:hover {
                background-color: #007bff;
                color: #fff;
            }

        .btn-outline-info {
            color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-outline-info:hover {
                background-color: #17a2b8;
                color: #fff;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProfiilePictureURL)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Bio)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    <img class="rounded-circle" src="@item.ProfiilePictureURL" alt="@item.Name">
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.Bio)
                                </td>
                                <td class="align-middle">
                                    <button type="button" class="btn btn-outline-primary" aria-pressed="true"><i class="bi bi-pencil-square"></i> Edit</button>
                                    <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="text-white">
            <a asp-controller="Producers" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8t+8LLXx0bqHXtL/C4IwifRNjz9uGZfrgk6xh7xs9H+J4q89Es8+5tjTg1j" crossorigin="anonymous"></script>
</body>
</html>
