@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.3/dist/css/bootstrap.min.css" integrity="sha384-GLhlTQ8iK7l5i6T9RS6YZJ46S3dPwF/RRxK1J+9WGHbBR5d6SppQD9F1ybo5pe1I" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #343a40;
            color: #fff;
        }

        .list-group-item {
            background-color: #495057;
            border: none;
            border-radius: 0;
            border-bottom: 1px solid #000; /* Black border between items */
        }

            .list-group-item:hover {
                background-color: #495057;
                border: none;
                color: #fff;
            }

        .list-group-item-action {
            color: #000;
        }

            .list-group-item-action:hover {
                color: #fff;
            }

        .navbar-dark .navbar-toggler-icon {
            background-color: #fff;
        }

        .navbar-dark .navbar-toggler {
            border-color: #fff;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center" style="border-style: solid"}>
                    <div>
                        <img src="@item.ProfiilePictureURL" alt="@item.Name" style="max-height: 50px; object-fit: cover;" class="rounded-circle mr-3">
                        <span>@item.Name</span>
                    </div>
                    <div>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.ActorId">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.ActorId">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ActorId">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="container mt-3">
        <div class="text-white">
            <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8t+8LLXx0bqHXtL/C4IwifRNjz9uGZfrgk6xh7xs9H+J4q89Es8+5tjTg1j" crossorigin="anonymous"></script>
</body>
</html>
